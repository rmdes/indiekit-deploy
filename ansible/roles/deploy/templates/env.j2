# Indiekit .env — Generated by Ansible
# Do not edit manually; update ansible/group_vars/all.yml and re-deploy.

# ─── Domain & Site ───
DOMAIN={{ domain }}
SITE_URL={{ site_url }}
SITE_NAME={{ site_name }}
SITE_DESCRIPTION={{ site_description }}
SITE_LOCALE={{ site_locale | default('en') }}
SITE_TIMEZONE={{ site_timezone | default('UTC') }}
SITE_CATEGORIES={{ site_categories | default('blog,notes,links,photos') }}

# ─── Author ───
AUTHOR_NAME={{ author_name }}
AUTHOR_BIO={{ author_bio | default('') }}
AUTHOR_AVATAR={{ author_avatar | default('/images/default-avatar.svg') }}
AUTHOR_TITLE={{ author_title | default('') }}
AUTHOR_LOCATION={{ author_location | default('') }}
AUTHOR_EMAIL={{ author_email | default('') }}

# ─── Social ───
GITHUB_USERNAME={{ github_username | default('') }}
BLUESKY_HANDLE={{ bluesky_handle | default('') }}
MASTODON_INSTANCE={{ mastodon_instance | default('') }}
MASTODON_USER={{ mastodon_user | default('') }}
LINKEDIN_USERNAME={{ linkedin_username | default('') }}

# ─── Syndication ───
MASTODON_ACCESS_TOKEN={{ mastodon_access_token | default('') }}
BLUESKY_PASSWORD={{ bluesky_password | default('') }}
LINKEDIN_ACCESS_TOKEN={{ linkedin_access_token | default('') }}
LINKEDIN_AUTHOR_NAME={{ linkedin_author_name | default('') }}
LINKEDIN_PROFILE_URL={{ linkedin_profile_url | default('') }}
LINKEDIN_CLIENT_ID={{ linkedin_client_id | default('') }}
LINKEDIN_CLIENT_SECRET={{ linkedin_client_secret | default('') }}

# ─── Webmentions ───
WEBMENTION_IO_TOKEN={{ webmention_io_token | default('') }}

# ─── Full profile integrations ───
GITHUB_TOKEN={{ github_token | default('') }}
GITHUB_FEATURED_REPOS={{ github_featured_repos | default('') }}
FUNKWHALE_INSTANCE={{ funkwhale_instance | default('') }}
FUNKWHALE_USERNAME={{ funkwhale_username | default('') }}
FUNKWHALE_TOKEN={{ funkwhale_token | default('') }}
LASTFM_API_KEY={{ lastfm_api_key | default('') }}
LASTFM_USERNAME={{ lastfm_username | default('') }}
YOUTUBE_API_KEY={{ youtube_api_key | default('') }}
YOUTUBE_CHANNELS={{ youtube_channels | default('') }}
PODROLL_EPISODES_URL={{ podroll_episodes_url | default('') }}
PODROLL_OPML_URL={{ podroll_opml_url | default('') }}

# ─── Authentication ───
# Set after first login (visit /session/login to generate)
PASSWORD_SECRET='{{ password_secret | default('') }}'
